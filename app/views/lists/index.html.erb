<div class="banner">
  <div>
    <h1><strong>Save any kind of movies</strong>!</h1>
    <p>Proudly presented to you by a Le Wagon graduate</p>
  </div>
</div>


<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
    <% if list.photo.key?%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
    <% else %>
       <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=list.picture_url%>)">
    <% end %>
    <%= link_to list.name, list_path(list) %>
  </div>
  <% end %>
</div>
