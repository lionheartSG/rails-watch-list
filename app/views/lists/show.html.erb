
<div class="container" id="list">
<br>
    <h1><%= @list.name %></h1>
    <hr>

<% @bookmarks.each do |bookmark| %>
    <div class="card-product">
      <%= image_tag("https://image.tmdb.org/t/p/original#{bookmark.movie.poster_url}") %>
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
      <%= link_to "Delete Bookmark", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-danger btn-sm"%>
    </div>
  </div>
<% end %>

<div class="links">
  <%= link_to 'Back', lists_path, class: 'btn btn-secondary' %>
  <%= link_to 'Edit', edit_list_path, class: 'btn btn-secondary'%>
  <%= link_to 'Add Movies into this list', new_list_bookmark_path(@list, @bookmark), class: 'btn btn-secondary'%>
  <%= link_to "Delete List", list_path(@list),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
              class: "btn btn-danger btn-sm"
  %>
</div>
